    private void removeGraphicalObjects(Tmesh tm){
	if(objects.contains(tm)){
	    objects.remove(tm);
	    tm.setRenderer(null);
	    RendererEvent re =
		new RendererEvent(RendererEvent.ObjectRemoved, tm);

	    fireRendererEvent(re);
	}
    }

